<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Playground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Word by you"
        android:layout_margin="8dp"
        android:id="@+id/text1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="**"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:id="@+id/previous_word"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Word by me:"
        android:layout_margin="8dp"
        android:id="@+id/text2"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="loading...."
        android:layout_margin="8dp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#000000"
        android:textStyle="bold"
        android:id="@+id/new_word"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entry"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editext_text"
            android:hint="Type your word : "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_margin="10dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter your word"
            android:id="@+id/word"
            android:selectAllOnFocus="true"
            android:layout_margin="8dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_margin="8dp"
            android:id="@+id/submit"
            />
    </LinearLayout>

</LinearLayout>
</ScrollView>
